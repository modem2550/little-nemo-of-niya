<MainLayout>
    <section class="hero-section">
        <div class="sparkles"></div>
        <div class="sparkles sparkles-2"></div>
        <div class="sparkles sparkles-3"></div>
        
        <div>
            <div class="row justify-content-center align-items-center w-auto">
