---
import MainLayout from '../layouts/MainLayout.astro';
import EventCard from '../components/EventCard.astro';
import GalleryCard from '../components/GalleryCard.astro';
import { getSupabase } from '../lib/supabase.server';

const supabase = getSupabase();

// ✅ ดึง Social จาก Local JSON
import socialData from '../data/social.json';

// ดึงจาก events_upcoming (สำหรับ upcoming events)
const { data: upcomingData } = await supabase
    .from('events_upcoming')
    .select('*')
    .order('date', { ascending: false });

// ดึงจาก event_gallery (สำหรับ gallery)
const { data: galleryData } = await supabase
    .from('event_gallery')
    .select('*')
    .order('Date-At', { ascending: false });

const today = new Date();
today.setHours(0, 0, 0, 0);

// แยกประเภทงาน (ใช้เฉพาะ upcomingData)
const upcomingEvents = upcomingData 
  ? upcomingData.filter(event => {
      const eventDate = new Date(event.date.replace(/-/g, '/'));
      return eventDate >= today;
    }).reverse() 
  : [];

const pastEvents = upcomingData 
  ? upcomingData.filter(event => {
      const eventDate = new Date(event.date.replace(/-/g, '/'));
      return eventDate < today;
    }) 
  : [];

function toSlug(text) {
  return text
    .toLowerCase()
    .trim()
    .replace(/\s+/g, "-")
    .replace(/[()]/g, "")
    .replace(/[^a-z0-9-]/g, "");
}
